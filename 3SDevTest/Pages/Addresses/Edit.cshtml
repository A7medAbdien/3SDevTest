@page
@model _3SDevTest.Pages.Addresses.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Address</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Address.Id" />
            <div class="form-group">
                <label asp-for="Address.UserId" class="control-label"></label>
                <select asp-for="Address.UserId" class="form-control" asp-items="ViewBag.Users"></select>
                <span asp-validation-for="Address.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.GovernateId" class="control-label"></label>
                <select asp-for="Address.GovernateId" class="form-control" asp-items="ViewBag.Governates"></select>
                <span asp-validation-for="Address.GovernateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.CityId" class="control-label"></label>
                <select asp-for="Address.CityId" class="form-control" asp-items="ViewBag.Cities"></select>
                <span asp-validation-for="Address.CityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.Street" class="control-label"></label>
                <input asp-for="Address.Street" class="form-control" />
                <span asp-validation-for="Address.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.BuildingNumber" class="control-label"></label>
                <input asp-for="Address.BuildingNumber" class="form-control" />
                <span asp-validation-for="Address.BuildingNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.FlatNumber" class="control-label"></label>
                <input asp-for="Address.FlatNumber" class="form-control" />
                <span asp-validation-for="Address.FlatNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_SeedCitiesDropdownBasedOnGovernatePartial");
    }
}
