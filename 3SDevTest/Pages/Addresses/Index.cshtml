@page
@model _3SDevTest.Pages.Addresses.IndexModel

@{
    ViewData["Title"] = "Addresses";
}

<div class="container">
    <div class="row py-4">
        <div class="col-6">
            <h1>Addresses</h1>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary text-capitalize" asp-page="Create">Create New</a>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Address[0].User) Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address[0].GovernateId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address[0].Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address[0].BuildingNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address[0].FlatNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Address)
        {
            <tr>
                <td>
                    @Model.GetFullNameByUser(item.User)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.GetGovernanceById(item.GovernateId).Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Street)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BuildingNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FlatNumber)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
